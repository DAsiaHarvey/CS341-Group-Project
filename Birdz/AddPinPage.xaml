<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Birdz.AddPinPage"
             Title="Entry"
             >
    <StackLayout >
        <StackLayout>
            <Label 
                       Text="Bird Name:"
                       FontSize="16"/>
            <Grid Margin="0,5">
                <Entry 
                       Placeholder="Robin"
                       PlaceholderColor="LightGray"
                       x:Name="BirdName"/>

            </Grid>
            <Label
                       Text="Brief Description:"
                       FontSize="16"/>
            <Grid Margin="0,5">
                <Entry
                        Placeholder="Enter Password"
                        IsPassword="True"
                        x:Name="Bried"/>
            </Grid>
        </StackLayout>
        <Button Margin="0,15"
                    Text="Save Pin"
                    Clicked="Save_Pin"
                    />
        <!--
        <Button Margin="0,15"
                    Text="Cancel"
                    Clicked="Cancel"
                    />
        -->
    </StackLayout>


    </ContentPage>