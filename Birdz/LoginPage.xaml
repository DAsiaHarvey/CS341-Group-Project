<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Birdz.LoginPage"
             Title="Log In"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <ScrollView>
    <Grid BackgroundColor="{StaticResource BackgroundColor}">
        <StackLayout Margin="20" VerticalOptions="FillAndExpand">
            <Image Source="birdzmascot.jpeg"
                   HeightRequest="200"
                HorizontalOptions="Center"/>

            <StackLayout Margin="0,40">
                <Label Style="{StaticResource DefaultText}" 
                       Text=" Welcome To Birdz"
                       FontSize="32"/>
                <Label Style="{StaticResource DefaultText}" 
                       Text=" Log In"
                       FontSize="16"/>
            </StackLayout>

            <StackLayout>
                <Label Style="{StaticResource DefaultText}" 
                       Text="Username"
                       FontSize="16"/>
                <Grid Margin="0,5">
                    <Entry 
                       TextColor="Black"
                       Placeholder="Enter Username"
                       x:Name="Username"/>

                </Grid>
                <Label Style="{StaticResource DefaultText}"
                       Text="Password"
                       FontSize="16"/>
                <Grid Margin="0,5">
                    <Entry
                        TextColor="Black"
                        Placeholder="Enter Password"
                        IsPassword="True"/>
                </Grid>
            </StackLayout>
            <Button Margin="0,15" BackgroundColor="{StaticResource BackgroundColor}"
                    Text="Sign In"
                    TextColor="{StaticResource DefaultTextColor}"
                    Clicked="SignInClicked"
                    x:Name="SignIn"/>
            <StackLayout VerticalOptions="FillAndExpand" Orientation="Horizontal">
                <Button Style="{StaticResource DefaultText}" 
                       Text="Forgot Password?"
                       FontSize="16"
                       VerticalOptions="EndAndExpand"
                       HorizontalOptions="StartAndExpand"/>
                <Button Style="{StaticResource DefaultText}" 
                       Text="Register"
                       FontSize="16"
                       VerticalOptions="EndAndExpand"
                       HorizontalOptions="EndAndExpand"/>
            </StackLayout>

        </StackLayout>
    </Grid>
    </ScrollView>

</ContentPage>
