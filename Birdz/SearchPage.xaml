<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Birdz.SearchPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             
             Title="Birdz Search">

    <ScrollView>
        <StackLayout Margin="25,5" VerticalOptions="StartAndExpand">
        <Image Source="mysterybird.png" WidthRequest="300" HeightRequest="300"></Image>
        <Label Style="{StaticResource DefaultText}"
               Text="Bird Name:"/>
        <Entry BackgroundColor="White"
               TextColor="Black"/>
        <Label Style="{StaticResource DefaultText}"
               Text="Bird Color:"/>
        <Entry BackgroundColor="White"
               TextColor="Black"/>
        <Label Style="{StaticResource DefaultText}"
               Text="Other Bird Info:"/>
        <Entry BackgroundColor="White"
               TextColor="Black"/>
            <Button Text="Search Birdz" HorizontalOptions="Center" VerticalOptions="Center"
                BackgroundColor="{StaticResource PrimaryColor}"
                FontSize="32" />
        </StackLayout>
    </ScrollView>

</ContentPage>